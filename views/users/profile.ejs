<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
    <% if (success && success.length) { %>
      <div class="alert alert-success">
          <%= success[0] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  <% } %>
  <% if (error && error.length) { %>
      <div class="alert alert-danger">
          <%= error[0] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  <% } %>
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <i class="icon-profile fa-solid fa-circle-user" style="color: #000000;"></i>
            <h5 class="my-3">Welcome, <%= user.username %></h5>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fa-solid fa-lock" style="color: #000000;"></i>
                <a class="mb-0 text-dark text-decoration-none" href="/user/changepassword">change password</a>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fa-solid fa-box-open" style="color: #000000;"></i>
                <a class="mb-0 text-dark text-decoration-none" href="/order/ordertrack">‡πçYour order</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card">
            <div class="card-body">
                <% if (!address) { %>
                    <h3 class="card-text">Please fill out your address.</h3>
                    <a href="/user/profile-edit" class="btn btn-dark">Edit</a>
                <% } else { %>
                  <h1><i class="fa-solid fa-address-book" style="color: #000000;"></i> ADDRESS</h1>
                    <div class="row">
                            <p class="card-text"><strong><i class="fa-solid fa-file-signature" style="color: #000000;"></i> Full Name:</strong> <%= address.fullname %></p>
                            <p class="card-text"><strong><i class="fa-solid fa-phone" style="color: #000000;"></i> Phone Number:</strong> <%= address.phoneNumber %></p>
                            <p class="card-text"><strong><i class="fa-solid fa-location-dot" style="color: #000000;"></i> Address:</strong> <%= address.address %></p>
                            <p class="card-text"><strong><i class="fa-solid fa-house" style="color: #000000;"></i> Postal Code:</strong> <%= address.postalCode %></p>
                            <p class="card-text"><strong><i class="fa-solid fa-earth-americas" style="color: #000000;"></i> Country:</strong> <%= address.country %></p>
                    </div>
                    <a href="/user/profile-edit" class="btn btn-dark mt-3">Edit</a>
                <% } %>
            </div>
            <img src="https://i.pinimg.com/originals/53/f2/2a/53f22a995ff5ce3258695cba1b0a6cbd.jpg" alt="cat paw cute" style="max-width: 100%; max-height: 100vh;">
          </div>          
        </div>
      </div>
    </div>
    </div>
</div>
</section>